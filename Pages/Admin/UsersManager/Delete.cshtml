@page
@model WebFood_2.Pages.Admin.UsersManager.DeleteModel

@{
    ViewData["Title"] = "حذف کاربر";
}
<style>
    body {
        text-align: center
    }</style>
<h1>حذف کاربر</h1>

<h3>از حذف کاربر اطمینان دارید؟</h3>
<div>
    <h4>Users</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            نام کاربری
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Users.UserName)
        </dd>
        <dt class="col-sm-2">
            ایمیل
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Users.UserEmail)
        </dd>
        <dt class="col-sm-2">
            رمزعبور
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Users.Password)
        </dd>
        <dt class="col-sm-2">
            سطح دسترسی ادمین
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Users.IsAdmin)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Users.UserId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
