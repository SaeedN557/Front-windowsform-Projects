@page
@model WebFood_2.Pages.Admin.UsersManager.IndexModel

@{
    ViewData["Title"] = "کنترل کاربران";
}

<h1>منوی کنترل کاربران</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                نام کاربری
            </th>
            <th>
                ایمیل
            </th>
            <th>
                رمزعبور
            </th>
            <th>
                سطح دسترسی ادمین
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Users) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAdmin)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.UserId" class="btn btn-warning">ویرایش</a> |
                    <a asp-page="./Details" asp-route-id="@item.UserId" class="btn btn-info">توضیحات</a> |
                    <a asp-page="./Delete" asp-route-id="@item.UserId" class="btn btn-danger">حذف کاربر</a>
            </td>
        </tr>
}
    </tbody>
    <tfoot>
        <a asp-page="Create" class="btn btn-empth">ایجاد کاربر جدید</a>
    </tfoot>
</table>
